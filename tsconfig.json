{
  "extends": "@react-native/typescript-config",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/Pods"
  ],
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ],
      "@/shared/*": [
        "shared/*"
      ],
      "@/entities/*": [
        "entities/*"
      ],
      "@/features/*": [
        "features/*"
      ],
      "@/widgets/*": [
        "widgets/*"
      ],
      "@/screens/*": [
        "screens/*"
      ],
      "@/app/*": [
        "app/*"
      ]
    }
  }
}